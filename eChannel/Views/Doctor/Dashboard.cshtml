@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Doctor Dashboard</h2>

<div class="row">
    <div class="col-lg-3">
        <ul id="sideNav" class="nav nav-pills nav-stacked" style="border-right: 1px solid #2780E3">
            <li class="active">
                @Ajax.ActionLink("My Schedules", "MySchedules", "Doctor", new AjaxOptions() { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "dashboard-container" })
            </li>
            <li >
                @Ajax.ActionLink("Add Schedule", "AddSchedule", "Doctor", new AjaxOptions() { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "dashboard-container" })
            </li>
            <li><a href="#">Channels</a></li>
            <li><a href="#">Hospitals</a></li>
        </ul>
    </div>


    <div id="dashboard-container">

    </div>

</div>

<script type="text/javascript">
 
    var $thumbs = $('#sideNav li').click(function (e) {
        e.preventDefault();      
        $thumbs.removeClass("active");      
        $(this).addClass("active");
    });

    $(document).ready(function () {
        $('#sideNav .active a').click();
    });
    
</script>




